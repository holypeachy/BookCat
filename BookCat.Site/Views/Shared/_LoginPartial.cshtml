@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="user-img-link" asp-controller="Account" asp-action="Index">
        <img class="user-img" src="~/images/default_user.png" alt="User Image">
    </a>
    <form method="post" asp-controller="Account" asp-action="Logout">
        <button class="btn" id="logout" type="submit">Logout</button>
    </form>
}
else
{
    @if (ViewData["Title"] is null || ViewData["Title"] != "Login"){
        <a class="btn clean-link" asp-controller="Account" asp-action="Login">Login</a>
    }
}